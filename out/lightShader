#define C
sampler2D inp;                                 
uniform float2 lightLocation;
static const float4 color = {1.f, 0.93f, 0.68f, 1.f};

float4 ps_main(float2 tex : TEXCOORD0) : COLOR {
	float distance = length(lightLocation - tex.xy);
	float attenuation = min(1, 0.7f/pow(distance,0.5f));//1.0 / (distance);
	//float attenuation = min(1.f, 1.f/log(1+10.f*distance));//1.0 / (distance);
	return color*attenuation;
}